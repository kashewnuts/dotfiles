# -*- encoding: utf-8 -*-
# Pythonスタートアップ
import readline
import rlcompleter
import atexit
import os
import platform
# タブ補完
readline.parse_and_bind('tab: complete')
# ヒストリーファイル
if platform.system() == 'Windows':
    environ_path = 'HOMEPATH'
else:
    environ_path = 'HOME'
histfile = os.path.join(os.environ[environ_path], '.pythonhistory')

try:
    readline.read_history_file(histfile)
except IOError:
    pass
atexit.register(readline.write_history_file, histfile)
del platform, os, histfile, environ_path, readline, rlcompleter, atexit
